ruby_block "install_mongodb" do
block do
  Chef::Log.info("INSTALLING MONGODB")
  system "sudo apt-get install mongodb -y"
end
end


ruby_block "restart_mongodb" do
block do
  Chef::Log.info("RESTART MONGODB SERVER")
  system "sudo /etc/init.d/mongodb restart"
end
end


ruby_block "install_pymongo" do
block do
  Chef::Log.info("INSTALLING PYTHON PYMONGO")
  system "sudo pip install pymongo"
end
end

ruby_block "install_cython" do
block do
  Chef::Log.info("INSTALL cython for connection to MS SQL SVR")
  system "sudo pip install cython"
end
end

ruby_block "install_pymssql" do
block do
  Chef::Log.info("INSTALL pymssql for connection to MS SQL SVR")
  system "sudo pip install pymssql"
end
end
